<div class="container">
  <p><%= flash[:notice] %></p>
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/new', book: @book, user: @user %>
    </div>
  
    <div class='col-md-8 offset-md-1'>
        <h2>Books</h2>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% @user_post.each do |book| %>
                <tr>
                    <td>
                      <%= link_to user_path(@user.id) do %>
                        <%= image_tag @user.get_profile_image(100,100) %>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to book_path(book.id) do %>
                        <%= book.title %>
                      <% end %>
                    </td>
                    <td>
                      <%= book.body %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>