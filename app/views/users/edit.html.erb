<div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
          <div>
            <%if @user.errors.any? %>
            <ul>
               <%= flash[:notice] %>
            </ul>
            <ul>
               <%= @user.errors.count %>error prohibited this obj from being saved:
            </ul>
            <% end %>
          </div>
        <!--<= flash[:notice] %>-->
        <%= form_with model: @user do |f| %>
        <div class ="form-group">
        <label for= "inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id: "inputname", placeholder: "" %>
        </div>
        <div>
        <label for = "inputimage">Profileimage</label>
        <%= f.file_field :profile_image,placeholder:"プロフィール画像", accept: "image/*" %>
        </div>
        <div>
        <label for= "inputIntroduction">introduction</label>
        <%= f.text_field :introduction, autofocus: true, id: "inputintroduction", placeholder: "" %>
        </div>
        <div>
        <%= f.submit "Update User" %>
        </div>
        <% end %>
    </div>
</div>